    <title>Image Resize - Web Tools</title>
    <script>
        // 캐시 방지를 위한 타임스탬프 생성
        var timestamp = new Date().getTime();
        // 동적으로 CSS 로드
        document.write('<link rel="stylesheet" href="css/style.css?v=' + timestamp + '">');
        document.write('<script src="js/image-converter.js?v=' + timestamp + '"><\/script>');
        
        // 페이지 로드 시 캐시 강제 새로고침
        window.addEventListener('load', function() {
            console.log('페이지 로드 완료, 캐시 타임스탬프:', timestamp);
            
            // 리사이즈 옵션 선택 문제 해결을 위한 추가 코드
            setTimeout(function() {
                const resizeType = document.getElementById('resize-type');
                if (resizeType) {
                    console.log('리사이즈 타입 이벤트 리스너 추가');
                    resizeType.addEventListener('change', function() {
                        console.log('리사이즈 타입 변경:', this.value);
                        
                        // 모든 옵션 그룹 숨기기
                        document.querySelectorAll('.resize-option-group').forEach(el => {
                            el.style.display = 'none';
                        });
                        
                        // 선택된 옵션 그룹 표시
                        const selectedOption = document.getElementById(this.value + '-options');
                        if (selectedOption) {
                            selectedOption.style.display = 'block';
                            console.log('옵션 그룹 표시:', this.value + '-options');
                        }
                    });
                    
                    // 초기 상태 설정
                    const currentType = resizeType.value || 'percentage';
                    console.log('현재 리사이즈 타입:', currentType);
                    
                    // 모든 옵션 그룹 숨기기
                    document.querySelectorAll('.resize-option-group').forEach(el => {
                        el.style.display = 'none';
                    });
                    
                    // 선택된 옵션 그룹 표시
                    const selectedOption = document.getElementById(currentType + '-options');
                    if (selectedOption) {
                        selectedOption.style.display = 'block';
                        console.log('초기 옵션 그룹 표시:', currentType + '-options');
                    }
                }
            }, 500);
        });
        
        // 언어 감지 및 설정
        function detectLanguage() {
            // 브라우저 언어 감지
            var userLang = navigator.language || navigator.userLanguage;
            // 저장된 언어 설정 가져오기
            var savedLang = localStorage.getItem('preferredLanguage');
            
            // 언어 설정 (저장된 설정이 있으면 사용, 없으면 영어를 기본값으로 설정)
            var lang = savedLang || 'en';
            
            // HTML 언어 속성 설정
            document.documentElement.lang = lang;
            
            return lang;
        }
        
        // 현재 언어 설정
        var currentLang = detectLanguage();
        
        // 언어 전환 함수
        function switchLanguage(lang) {
            localStorage.setItem('preferredLanguage', lang);
            location.reload();
        }
        
        // 페이지 로드 시 언어에 따른 요소 표시
        document.addEventListener('DOMContentLoaded', function() {
            // 현재 언어 표시 업데이트
            document.getElementById('current-lang').textContent = currentLang === 'en' ? 'English' : '한국어';
            
            // 모든 다국어 요소 업데이트
            var elements = document.querySelectorAll('[data-en], [data-ko]');
            elements.forEach(function(element) {
                if(element.hasAttribute('data-' + currentLang)) {
                    element.textContent = element.getAttribute('data-' + currentLang);
                }
            });
        });
    </script>
