    <!-- 기존 스크립트 로드 -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 파일 선택 관련 요소
            const uploadArea = document.getElementById('upload-area');
            const fileInput = document.getElementById('file-input');
            const selectFileBtn = document.getElementById('select-file-btn');
            const cancelBtn = document.getElementById('cancel-btn');
            
            // 세 가지 상태 뷰
            const defaultView = document.getElementById('upload-default-view');
            const previewView = document.getElementById('upload-preview-view');
            const selectedView = document.getElementById('upload-selected-view');
            
            const fileList = document.getElementById('file-list');
            
            // 초기 상태 설정 - 이미지 선택된 것처럼 보이는 화면
            previewView.style.display = 'block';
            defaultView.style.display = 'none';
            selectedView.style.display = 'none';
            cancelBtn.style.display = 'inline-block';
            
            
            // 기본 화면으로 전환하는 함수
            function showDefaultView() {
                defaultView.style.display = 'block';
                previewView.style.display = 'none';
                selectedView.style.display = 'none';
                cancelBtn.style.display = 'none';
                fileList.innerHTML = '<p data-en="No file selected" data-ko="선택된 파일이 없습니다">No file selected</p>';
            }
            
            // 이미지 선택된 것처럼 보이는 화면으로 전환하는 함수
            function showPreviewView() {
                defaultView.style.display = 'none';
                previewView.style.display = 'block';
                selectedView.style.display = 'none';
                cancelBtn.style.display = 'inline-block';
            }
            
            // 실제 파일 선택 화면으로 전환하는 함수
            function showSelectedView() {
                defaultView.style.display = 'none';
                previewView.style.display = 'none';
                selectedView.style.display = 'block';
                cancelBtn.style.display = 'inline-block';
            }
            
            // 파일 선택 버튼 클릭 시
            selectFileBtn.addEventListener('click', function() {
                fileInput.click();
            });
            
            // 파일 선택 시
            fileInput.addEventListener('change', function(e) {
                if (this.files && this.files.length > 0) {
                    // 실제 파일 선택 화면으로 전환
                    showSelectedView();
                    
                    // 선택된 파일 처리
                    selectedView.innerHTML = '';
                    fileList.innerHTML = '';
                    
                    Array.from(this.files).forEach(file => {
                        // 미리보기 생성
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const previewItem = document.createElement('div');
                            previewItem.className = 'preview-item';
                            previewItem.style.position = 'relative';
                            previewItem.style.margin = '5px';
                            previewItem.style.textAlign = 'center';
                            
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.style.maxWidth = '100%';
                            img.style.maxHeight = '300px';
                            img.style.objectFit = 'contain';
                            
                            const infoDiv = document.createElement('div');
                            infoDiv.className = 'preview-info';
                            infoDiv.style.marginTop = '5px';
                            
                            const nameSpan = document.createElement('span');
                            nameSpan.className = 'preview-name';
                            nameSpan.textContent = file.name;
                            
                            const sizeSpan = document.createElement('span');
                            sizeSpan.className = 'preview-size';
                            sizeSpan.textContent = ` (${Math.round(file.size / 1024)} KB)`;
                            
                            infoDiv.appendChild(nameSpan);
                            infoDiv.appendChild(sizeSpan);
                            
                            previewItem.appendChild(img);
                            previewItem.appendChild(infoDiv);
                            
                            selectedView.appendChild(previewItem);
                        };
                        reader.readAsDataURL(file);
                        
                        // 파일 목록 항목 생성
                        const fileItem = document.createElement('div');
                        fileItem.className = 'file-item';
                        fileItem.style.display = 'flex';
                        fileItem.style.alignItems = 'center';
                        fileItem.style.margin = '5px 0';
                        fileItem.style.padding = '5px';
                        fileItem.style.border = '1px solid #eee';
                        fileItem.style.borderRadius = '4px';
                        
                        const icon = document.createElement('i');
                        icon.className = 'fas fa-file-image';
                        icon.style.marginRight = '10px';
                        icon.style.color = '#007bff';
                        
                        const fileInfo = document.createElement('div');
                        fileInfo.className = 'file-info';
                        
                        const fileName = document.createElement('div');
                        fileName.className = 'file-name';
                        fileName.textContent = file.name;
                        
                        const fileSize = document.createElement('div');
                        fileSize.className = 'file-size';
                        fileSize.style.fontSize = '0.8rem';
                        fileSize.style.color = '#6c757d';
                        fileSize.textContent = `${Math.round(file.size / 1024)} KB`;
                        
                        fileInfo.appendChild(fileName);
                        fileInfo.appendChild(fileSize);
                        
                        fileItem.appendChild(icon);
                        fileItem.appendChild(fileInfo);
                        
                        fileList.appendChild(fileItem);
                    });
                }
            });
            
            // 취소 버튼 클릭 시
            cancelBtn.addEventListener('click', function() {
                // 기본화면으로 돌아가기
                showDefaultView();
                
                // 파일 입력 초기화
                fileInput.value = '';
            });
            
            // 비율 버튼 클릭 이벤트 처리
            const ratioButtons = document.querySelectorAll('.ratio-btn');
            const percentageInput = document.getElementById('percentage-input');
            
            // 원본 및 리사이즈된 크기 표시 요소
            const originalWidthEl = document.getElementById('percentage-original-width');
            const originalHeightEl = document.getElementById('percentage-original-height');
            const resizedWidthEl = document.getElementById('percentage-resized-width');
            const resizedHeightEl = document.getElementById('percentage-resized-height');
            
            // 이미지 크기 설정 (미리보기 이미지 로드 시 실행)
            setTimeout(function() {
                // 원본 이미지 크기 설정 (예시 값)
                originalWidthEl.textContent = '800';
                originalHeightEl.textContent = '600';
                
                // 리사이즈된 크기 업데이트
                updateResizedSize();
            }, 500);
            
            // 비율에 따른 리사이즈된 크기 업데이트 함수
            function updateResizedSize() {
                const percentage = parseFloat(percentageInput.value) || 100;
                const originalWidth = parseInt(originalWidthEl.textContent) || 0;
                const originalHeight = parseInt(originalHeightEl.textContent) || 0;
                
                // 리사이즈된 크기 계산 및 표시
                const resizedWidth = Math.round(originalWidth * percentage / 100);
                const resizedHeight = Math.round(originalHeight * percentage / 100);
                
                resizedWidthEl.textContent = resizedWidth;
                resizedHeightEl.textContent = resizedHeight;
            }
            
            // 비율 입력값 변경 시 리사이즈된 크기 업데이트
            percentageInput.addEventListener('input', updateResizedSize);
            percentageInput.addEventListener('change', updateResizedSize);
            
            ratioButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const ratio = this.getAttribute('data-ratio');
                    percentageInput.value = ratio;
                    
                    // 리사이즈된 크기 업데이트
                    updateResizedSize();
                    
                    // 변경 이벤트 발생시켜 미리보기 업데이트
                    const event = new Event('change');
                    percentageInput.dispatchEvent(event);
                    
                    // 버튼 스타일 업데이트
                    ratioButtons.forEach(btn => {
                        btn.classList.remove('active');
                        btn.classList.remove('btn-primary');
                        btn.classList.add('btn-outline-secondary');
                    });
                    this.classList.add('active');
                    this.classList.add('btn-primary');
                    this.classList.remove('btn-outline-secondary');
                });
            });
            
            // 드래그 앤 드롭 기능
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                e.stopPropagation();
                this.style.borderColor = '#007bff';
            });
            
            uploadArea.addEventListener('dragleave', function(e) {
                e.preventDefault();
                e.stopPropagation();
                this.style.borderColor = '#ccc';
            });
            
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                this.style.borderColor = '#ccc';
                
                if (e.dataTransfer.files && e.dataTransfer.files.length > 0) {
                    fileInput.files = e.dataTransfer.files;
                    const event = new Event('change');
                    fileInput.dispatchEvent(event);
                }
            });
        });
    </script>
</body>
</html> 